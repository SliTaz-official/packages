pkgname="lxterminal"
pkgver="0.3.1"
pkgrel=0
pkgdesc="LXDE terminal emulator"
url="https://wiki.lxde.org/en/LXTerminal"
arch="all"
license="GPL2"
makedepends="intltool gtk+2.0-dev vte028-dev"
subpackages="$pkgname-lang $pkgname-doc"
source="https://downloads.sourceforge.net/lxde/$pkgname-$pkgver.tar.xz
	lxterminal-icon.patch"
#builddir="$srcdir/"
options="!check"

build() {
	./configure \
		--prefix=/usr
	make
}

package() {
	make DESTDIR="$pkgdir" install

	# remove icons (substituted by utilities-terminal)
	rm -r "$pkgdir/usr/share/icons"
}


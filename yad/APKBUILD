pkgname="yad"
pkgver="0.40.0"
pkgrel=0
pkgdesc="Yet Another Dialog"
url="https://sourceforge.net/projects/yad-dialog/"
arch="all"
license="GPL3"
makedepends="intltool gtk+2.0-dev"
subpackages="$pkgname-dev $pkgname-lang $pkgname-doc"
source="https://downloads.sourceforge.net/yad-dialog/$pkgname-$pkgver.tar.xz
	icons-size.patch"
	#ru.patch" # need to update
options="!check"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-icon-browser \
		--with-gtk=gtk2 \
		--disable-html
	make
}

package() {
	make DESTDIR="$pkgdir" install
}


# Contributor: Aleksey Bobylev <al.bobylev@gmail.com>
# Maintainer: Pascal Bellard <pascal.bellard@slitaz.org>
pkgname="alien"
pkgver="8.95"
pkgrel=0
pkgdesc="Converts between the rpm, dpkg, stampede slp, and slackware tgz file formats"
url="http://joeyh.name/code/alien/"
arch="noarch"
license="GPL2"
depends="perl cpio" # rpm
makedepends="perl"
subpackages="$pkgname-doc"
source="https://downloads.sourceforge.net/alien-pkg-convert/${pkgname}_$pkgver.tar.xz"

build() {
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

sha512sums="c46d3c82542dc3d96eeabea0f0c7ab5b572acaf67d15e2064ea01df32d69a2cf6e083754be49269df6cd7431ec5b3e09ddcb83fbe2ee17843b22e9cd3e73073c  alien_8.95.tar.xz"
